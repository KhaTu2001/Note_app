<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bac_color"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.EditNoteFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="10dp">

        <EditText
            android:id="@+id/edtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#d1d1d1"
            android:padding="15dp"
            android:layout_marginTop="10dp"
            android:hint="Title"
            android:background="@drawable/edit_txt_shape"/>

        <EditText
            android:id="@+id/edtSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#d1d1d1"
            android:padding="15dp"
            android:layout_marginTop="10dp"
            android:hint="Subtitle ..."
            android:background="@drawable/edit_txt_shape"/>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >

            <ImageView
                android:id="@+id/pedtGreen"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/green_dot" />

            <ImageView
                android:id="@+id/pedtYellow"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/yellow_dot"
                android:layout_marginStart="20dp"/>

            <ImageView
                android:id="@+id/pedtRed"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/red_dot"
                android:layout_marginStart="20dp"/>


        </LinearLayout>

        <EditText
            android:id="@+id/edtNotes"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:textColorHint="#d1d1d1"
            android:padding="15dp"
            android:gravity="start"
            android:layout_marginTop="10dp"
            android:hint="Notes ..."
            android:background="@drawable/edit_txt_shape"/>

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnEditSaveNotes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:backgroundTint="@color/red_color"
        android:layout_margin="26dp"
        android:src="@drawable/ic_baseline_check_24"
        android:layout_gravity="bottom|right"/>

</FrameLayout>